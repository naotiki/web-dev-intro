---
interface Props {
  html:string;
}
const {html} = Astro.props
import { Code } from "@astrojs/starlight/components";
import { Tabs, TabItem } from "@astrojs/starlight/components";
---

<Tabs>
  <TabItem label="コード">
    <Code code={html} lang="html" />
  </TabItem>
  <TabItem label="結果">
    <iframe srcdoc={html} sandbox="allow-scripts" style="width: 100%; height: 100%; border: none;">
    </iframe>
  </TabItem>
</Tabs>
